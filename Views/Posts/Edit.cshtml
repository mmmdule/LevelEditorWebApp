@model LevelEditorWebApp.Models.Post

@{
    ViewData["Title"] = "Edit";
}
<div class="mb-3">
    <a asp-area="" asp-route-i="0" asp-controller="Posts" asp-action="Index"
       class="link-secondary text-decoration-none lead fw-bold"> 
       <i class="fa-solid fa-chevron-left"></i> Back to List
    </a>
</div>

<h1>Edit Post</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <div class="form-group mb-4">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Body" class="control-label">Description</label>
                <!--    <input asp-for="Body" class="form-control" />   -->
                <textarea class="form-control" asp-for="Body" placeholder="Enter a description for your project"
                          id="floatingTextarea" style="height: 7rem"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ZipFile" class="control-label">Project File (.zip)</label>
                <input asp-for="ZipFile" type="file" class="form-control" />
                <span asp-validation-for="ZipFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
