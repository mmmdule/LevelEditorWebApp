@model LevelEditorWebApp.Models.Post

@{
    ViewData["Title"] = "Create";
}

<h1>Create Post</h1>
<hr />
<div class="row">
    <div class="col-md-8 col-sm-11 mt-2">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Title" class="control-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Body" class="control-label">Description</label>
                <!--    <input asp-for="Body" class="form-control" />   -->
                <textarea class="form-control" asp-for="Body" placeholder="Enter a description for your project"
                          id="floatingTextarea" style="height: 7rem"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="ZipFile" class="control-label">Zipped project file</label>
                <input asp-for="ZipFile" required type="file" class="form-control" />
                <span asp-validation-for="ZipFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
